{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "GIF压缩器",
  "version": "0.1.0",
  "identifier": "com.gif-compressor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 660,
        "resizable": true,
        "title": "GIF压缩器",
        "width": 800,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "一个简单高效的GIF压缩工具",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "shortDescription": "GIF压缩工具",
    "targets": ["app"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "scope": {
        "allow": [
          {
            "name": "gifsicle",
            "cmd": "gifsicle",
            "args": true
          }
        ]
      }
    },
    "dialog": null,
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
